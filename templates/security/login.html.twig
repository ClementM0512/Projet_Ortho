{% extends 'base.html.twig' %}

{% block body %}
<div class="border">
	<div class="form-login">
		<form action="{{ path('security_login') }}" method="post">
			<div class="form-group">
				<input placeholder="username" required name="_username" type="text"
					class="form-control">
			</div>
			<div class="form-group">
				<input placeholder="password" required name="_password"
					type="password" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-success" type="submit">Connexion</button>
			</div>
		</form>

		<a class="btn btn-primary" href="{{ path('security_recup') }}">Mot de passe oubli√©</a>
	</div>
</div>
{% endblock %}