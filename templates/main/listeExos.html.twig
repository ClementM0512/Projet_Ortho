{% extends 'base.html.twig' %}

{% block title %}
Liste Appli
{% endblock %}




{% block body %}
<section class="exercices">

{% for exercice in exercices %}
	<div class="metadata">
	
    <a href="{{ path(exercice.lien, {'id': id})}}">
    	
   		<button type="submit" class="btn-primary" >
   		<img src="{{asset(exercice.image)}}" style="width:100px; height:100px;" > </br>
		{{ exercice.name}}
</button>
</a>
</div>
{% endfor %}

</section>
{% block javascripts %}
<script>	
	var header = document.getElementById("change-active");
	var btns = document.body.querySelectorAll("li");
    btns[0].className = "nav-item change-item";
    btns[2].className = "nav-item active change-item"
</script>
{% endblock %}
{% endblock %}