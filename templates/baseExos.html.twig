<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no, target-densitydpi=device-dpi">
<title>{% block title %}jeux{% endblock %}</title>
{% block stylesheets %}
<link rel="stylesheet" href="\CSSFiles\stylesbootswatch.css">
<link rel="stylesheet" href="\CSSFiles\app.css">
<link rel="stylesheet" href="\CSSFiles\allfontawesome.css">
<link rel="stylesheet" href="\CSSFiles\exercice.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
{% endblock %}
</head>
<body>

		<div class="nav">
  		<div><a href="#"><i class="fas fa-question-circle logo" style="font-size:40px;"></i></a></div>
  		{% if bool %}
  			{% if idPatient %}
  				<div><a href="{{ path('patient_show',{'id' : idPatient.id }) }}"><i class="fas fa-door-open logo" style="font-size:40px;"></i></a></div>
  			{% else %}
  		  		<div><a href="{{ path('patients') }}"><i class="fas fa-door-open logo" style="font-size:40px;"></i></a></div>
  			{% endif %}
  		{% elseif idPatient %}
  		<div><a href="{{ path('listeExosPatient',{'idPatient' : idPatient.id }) }}"><i class="fas fa-door-open logo" style="font-size:40px;"></i></a></div>
  		{% else %}
  		<div><a href="{{ path('listeExos') }}"><i class="fas fa-door-open logo" style="font-size:40px;"></i></a></div>
  		{% endif %}
  		<p>
	        Orthop : <span id="idUser">{{ idUser.username }}</span>
        </p>
        	{% if idPatient %}
  				<p>
        	Patient : <span id="idPatient">{{ idPatient.nom }}</span>
        	</p>
  			{% else %}
  		  		<p>
        		<span id="idPatient"></span>
      		  	</p>
  			{% endif %}
        {% if idExercice %}
        <p>
	      	Exercice : <span id="idExercice">{{ idExercice.name }}</span>
		</p>
		{% else %}
		<p><span id="idExercice"></span></p>
			{% endif %}
        <label>Enregistrer</label>
        <input id="enregistrement" type="checkbox" {% if  idPatient %} checked {% endif %} id="scales" name="Enregistrer">
        
	</div>
	<div id="application">
		{% block body %}{% endblock %}
	</div>
	
</body>
</html>